{{ header|raw }}
<div class="card">
    <div class="header">
        <h4 class="title">{{ text('ratingTable') }}</h4>
    </div>
    <div class="content table-responsive table-full-width rating-content">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ text('no') }}</th>
                <th>{{ text('username') }}</th>
                <th>{{ text('fullname') }}</th>
                {% for task in tasks %}
                <th>{{ task.name }}</th>
                {% endfor %}
                <th>{{ text('mulct') }}</th>
                <th>{{ text('oldScore') }}</th>
                <th>{{ text('score') }}</th>
                <th>{{ text('result') }}</th>
            </tr>
            </thead>

            <tbody>
            {% for key, row in table  %}
            <tr>
                <td>{{ key + 1 }}</td>
                <td>{{ row.login }}</td>
                <td>{{ row.name|raw }}</td>
                {% for task in row.tasks %}
                    <td>{{ task.ok }} ({{ task.try }})</td>
                {% endfor %}
                <td>{{ row.shtraff }}</td>
                <td>{{ row.old_res }}</td>
                <td>{{ row.score }}</td>
                <td>{{ row.score + row.old_res - row.shtraff }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{{ footer|raw }}