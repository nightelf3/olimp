{{ header|raw }}
<div class="row">
    <div class="{% if (errors.taskIsNotEnabled) %}col-md-12{% else %}col-md-8{% endif %}">
        <table width="100%" cellspacing="0" class="tabs-table">
            <tr>
                {% for task in tasks %}
                    <td class="tabs-link" style="background-color:{{ tabTaskColor(task.getStatus(), task.task_id == currentTask.task_id) }};" width="{{ 100 / tasks|length }}%" onClick="location.href='{{ href("task/#{userId}/#{task.task_id}") }}'">{{ task.name }}</td>
                    {% if false == loop.last %}<td width="1"></td>{% endif %}
                {% endfor %}
            </tr>
            <tr>
                <td id="task-main-text" colspan="{{ tasks|length * 2 }}">
                    <div class="card">
                        <div class="content">
                            {% if (errors.taskIsNotEnabled) %}
                                <div class="alert alert-danger">{{ text('task-is-not-enabled') }}</div>
                            {% else %}
                                {{ currentTask.task|decode|raw }}
                            {% endif %}
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    {% if (not errors.taskIsNotEnabled) %}
    <div class="col-md-4">
        {{ uploadForm|raw }}
        {{ queueInfo|raw }}
    </div>
    {% endif %}
</div>
{{ footer|raw }}