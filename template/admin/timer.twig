{{ header|raw }}
<div style="margin: 10px auto; padding:20px; width: 340px; height: 300px; background: #E0E0E0; border: 1px solid black;">
    <form method="post" action="{{ href('admin/timer') }}">
        <table width="100%" height="100%" border="0">
            <tr>
                <td  align="center" valign="middle">
                    <div style="margin: 0 auto 0;">{{ timer|raw }}</div>
                </td>
            </tr>
            <tr>
                <td  align="center" valign="middle">{{ text('adminEnterOlimpDate') }}<br />(DD/MM/YYYY, HH:MM:SS)</td>
            </tr>
            <tr>
                <td align="center" valign="middle">
                    <input type="text" style="width: 25px" name="t_day" maxlength="2" value="{{ time.day|default('now'|date('d')) }}" required /> /
                    <input type="text" style="width: 25px" name="t_month" maxlength="2" value="{{ time.month|default('now'|date('m')) }}" required /> /
                    <input type="text" style="width: 35px" name="t_year" maxlength="4" value="{{ time.year|default('now'|date('Y')) }}" required /> ,
                    <input type="text" style="width: 25px" name="t_hours" maxlength="2" value="{{ time.hours|default('now'|date('H')) }}" required /> :
                    <input type="text" style="width: 25px" name="t_minutes" maxlength="2" value="{{ time.minutes|default('now'|date('i')) }}" required /> :
                    <input type="text" style="width: 25px" name="t_seconds" maxlength="2" value="{{ time.seconds|default('now'|date('s')) }}" required />
                </td>
            </tr>
            <tr>
                <td  align="center" valign="middle">{{ text('adminEnterOlimpDuration') }}<br />(HH:MM:SS)</td>
            </tr>
            <tr>
                <td align="center" valign="middle">
                    <input type="text" style="width: 25px" name="d_hours" maxlength="2" value="{{ duration.hours|default('03') }}" required /> :
                    <input type="text" style="width: 25px" name="d_minutes" maxlength="2" value="{{ duration.minutes|default('00') }}" required /> :
                    <input type="text" style="width: 25px" name="d_seconds" maxlength="2" value="{{ duration.seconds|default('00') }}" required />
                </td>
            </tr>
            <tr>
                <td valign="middle">
                    <input type="button" style="width: 130px; float: left;" value="{{ text('back') }}" name="back" onClick="document.location = '{{ href('admin') }}'" />
                    <input type="submit" style="width: 25%; float: right;" name="accept" value="{{ text('save') }}" />
                </td>
            </tr>
        </table>
    </form>
</div>
{{ footer|raw }}