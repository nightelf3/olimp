<form method="post" action>
    <table border="0" cellspacing="0" cellpadding="0" style="width:100%;">
        <tr>
            <td style="width:50px" nowrap>{{ text('login') }}</td>
            <td><input type="text" style="width:100%" name="login" value="{{ login }}" /></td>
        </tr>
        <tr>
            <td style="width: 50px" nowrap>{{ text('password') }}</td>
            <td><input type="password" style="width:100%" name="password" /></td>
        </tr>
        <tr>
            <td nowrap><label><input type="checkbox" name="remember">{{ text('remember') }}</label></td>
            <td align="right" valign="top"><input type="submit" value="{{ text('login') }}" /></td>
        </tr>
        <tr>
            <td colspan="2" style="font-size:10pt;text-align:center;"><a href="{{ href('forgot') }}">{{ text('forgot') }}</a> | <a href="{{ href('registration') }}">{{ text('registrate') }}</a></td>
        </tr>
    </table>
</form>